@import 'normalize.css';


body {
  overflow: hidden;
  /*font-family: 'Bad Script', cursive;*/
  font-family: 'Roboto', serif;
  font-weight: 200;
  font-size: 14px;
  line-height: 20px;
}

$c-main = rgba(80, 200, 240, 1);
$c-text = rgba(80, 80, 80, 1);

strokeC(degr)
  stroke: alpha(hue(hsl(90deg, 75%, 50%), degr * 360 / 400), .75);

body * {
  box-sizing: border-box;
}

  .mj-calendar {
    position: relative;
    width: 100%;
    height: 100%;

    transform: translateZ(0);

    display: flex;
    justify-content: center;
    align-items: center;

    background-color: #fff;

    box-shadow: 0 4px 8px -4px rgba(0, 0, 0, .25);

    * {
      shape-rendering: auto;
    }

    &__month {
      font-size: 10px;
      font-family: 'Bad Script', cursive;
    }

    &__note {
      fill: darken($c-main, 40);
      font-size: 4px;
      font-family: 'Bad Script', cursive;
    }

    &__date {
      font-size: 2.5px;
      opacity: .5;
      //font-family: 'Bad Script', cursive;

      &__weekend {
        fill: rgba(0, 0, 140, 1);
      }

      &Wrap {
        width: 20px;
        height: 20px;
        overflow: visible !important;

        transition: all .25s ease-in-out;
        //opacity: 0;
        //display: none;
      }
    }

    &__day {

      for n in 1..400 {

        &:nth-child({n}) {
          /*foo n;*/
        }

        &:nth-child({n})>circle {
          strokeC(n);
        }
      }

      &:hover {
        .mj-calendar__dateWrap {
          opacity: 1;
          display: block;
        }
      }
    }

    &__line {
      stroke: alpha($c-main, .1);
      stroke-width: .25;
      fill: none;

      &._additional {
        stroke: rgba(0, 0, 0, .15);
        stroke-width: .25;
        /*display: none;*/
        shape-rendering: geometricPrecision;
      }
    }

    &__circle {
      cursor: pointer;
      transition: .5s all ease-in-out;
      fill: white;
      stroke: alpha($c-main, .25);
      stroke-width: .25;


      &:first-child {
        //fill: rgba(120, 0, 0, 1);
      }

      &._weekend {
        stroke: alpha($c-main, .25);
        stroke-width: .5;
      }

      &:hover {
        stroke: alpha($c-main, 0);
        stroke-width: 1;
        /*fill: lighten($c-main, 20);*/
      }
    }

    svg {
      border: 1px solid rgba(0, 0, 0, .1);
    }

    &__svg {
      max-width: 100%;
      max-height: 100%;
      margin: 0 auto;
    }

    &__wrapper {
      width: 100vw;
      height: 100vh;

      padding: 20px;

      position: relative;
      z-index: 100;

      background-color: rgba(0, 0, 0, .05);
      //overflow: hidden;
    }
  }


@import 'block/mj-login.styl';





// overrides

.ui-datepicker {
  border: none !important;

  background: rgba(255, 255, 255, 1) !important;
  box-shadow: 0 4px 8px -4px rgba(0, 0, 0, .25);

  margin-left: -20px;
  display: flex;
  flex-direction: column;
  align-items: center;

  &-header {
    padding: 10px 20px;
    display: flex;
    background: none !important;
    color: $c-main;
    border: none !important;
  }

  &-calendar {

    thead {
      th {
        font-weight: 200;
        font-size: 80%;
        opacity: .25;
      }

    }

  }
}

.ui-state-default {
  width: 100%;
  min-width: 100%;
  display: block;
  text-align: center;
  text-decoration: none;
  color: $c-main;
  font-family: 'Roboto', serif;
  border: none !important;
  background: none !important;
  font-weight: 200;
  font-size: 12px;
  padding: 10px;
}

  .ui-state-hover {
    background: alpha($c-main, .15) !important;
    color: $c-main !important;
  }

  .ui-datepicker-prev {order: 1;}
  .ui-datepicker-title {
    order: 2;
    color: rgba(80, 80, 80, 1);
  }
  .ui-datepicker-next {order: 3;}


.trip-popup {



  &__overlay {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1000;
    width: 100%;
    height: 100%;

    .mj-link {
      font-size: 110%;
    }
  }

  &__black {
    top: 0;
    left: 0;
    z-index: 1100;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .85);
  }

  &__box {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    padding: 40px;

    background-color: rgba(255, 255, 255, 1);
    min-width: 400px;
    z-index: 1200;

    transition: all .25s ease-in-out;

    border-radius: 2px;

    &._login {
      max-width: 400px;
      min-width: 400px;

      .trip-popup__input {
        font-size: 120%;
      }
    }
  }

  &__title {
    font-size: 160%;
    text-align: center;
    margin-bottom: 20px;

    &._sub {
      font-size: 90%;
      opacity: .5;
    }
  }

  &__form {
    display: flex;
    flex-direction: column;
    margin-bottom: 40px;
  }

  &__input {
    height: 50px;
    line-height: 50px;
    padding-left: 10px;

    margin-bottom: 20px;

    border: none;
    border-bottom: 2px solid rgba(220, 220, 220, 1);
    /*background-color: rgba(0, 0, 0, .1);*/

    transition: all .15s ease-in-out;
    border-radius: 0;

    outline: 2px solid transparent;

    &Wrap {
      position: relative;

      input {
        width: 100%;
      }
    }

    &:focus {
      background-color: rgba(0, 0, 0, .05);
      border-bottom: 2px solid $c-main;
      /*outline: 2px solid alpha($c-main, .25);*/
    }

    &._area {
      border: 2px solid rgba(220, 220, 220, 1);

      max-width: 100%;
      height: 100px;
      line-height: 25px;
      resize: none;

      &:focus {
        background-color: rgba(0, 0, 0, .05);
        border-bottom: 2px solid $c-main;
        /*outline: 2px solid alpha($c-main, .25);*/
      }
    }

  }

  transition: visibility 0s, opacity .25s ease-in-out;


}

.js-hidden {
  visibility: hidden;
  opacity: 0;

  .trip-popup__box {
    transform: translateX(-50%) translateY(-45%);
    opacity: 0;
  }
}

.ui-autocomplete {
  position: absolute;
  z-index: 1000;
  top: 50px;

  border-radius: 0;
  background-image: none;
  border: none !important;
  outline: none;

  background-color: white;

  box-shadow: 0 4px 16px -4px rgba(0, 0, 0, .25);

  .ui-menu-item {
    height: 40px;
    line-height: 40px;

    a {
      display: block;
      padding-left: 10px;

      &.ui-state-focus {
        background-image: none;
        background: $c-main;
        border: none;
        border-radius: 0;
        color: white;
        font-weight: 400;
      }
    }
  }
}

.mj-counter__graph {
  stroke: $c-main;
  stroke-weight: .25px;
  opacity: .5;
}

.mj-counter__marker {
  fill: $c-main;
}
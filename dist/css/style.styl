@import 'normalize.css';


body {
  overflow-x: hidden;
  /*font-family: 'Bad Script', cursive;*/
  font-family: 'Roboto', serif;
  font-weight: 200;
  font-size: 14px;
  line-height: 20px;
}

$c-main = rgba(80, 200, 240, 1);
$c-text = rgba(80, 80, 80, 1);

$c-bright = rgba(20, 140, 220, 1);

strokeC(degr)
  stroke: alpha(hue(hsl(90deg, 75%, 50%), degr * 360 / 400), .75);

body * {
  box-sizing: border-box;
}




@import 'block/mj-login.styl';





// overrides

.ui-datepicker {
  border: none !important;

  background: rgba(255, 255, 255, 1) !important;
  box-shadow: 0 4px 8px -4px rgba(0, 0, 0, .25);

  margin-left: -20px;
  display: flex;
  flex-direction: column;
  align-items: center;

  &-header {
    padding: 10px 20px;
    display: flex;
    background: none !important;
    color: $c-main;
    border: none !important;
  }

  &-calendar {

    thead {
      th {
        font-weight: 200;
        font-size: 80%;
        opacity: .25;
      }

    }

  }
}

.ui-state-default {
  width: 100%;
  min-width: 100%;
  display: block;
  text-align: center;
  text-decoration: none;
  color: $c-main;
  font-family: 'Roboto', serif;
  border: none !important;
  background: none !important;
  font-weight: 200;
  font-size: 12px;
  padding: 10px;
}

  .ui-state-hover {
    background: alpha($c-main, .15) !important;
    color: $c-main !important;
  }

  .ui-datepicker-prev {order: 1;}
  .ui-datepicker-title {
    order: 2;
    color: rgba(80, 80, 80, 1);
  }
  .ui-datepicker-next {order: 3;}


.trip-popup {



  &__overlay {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1000;
    width: 100%;
    height: 100%;

    .mj-link {
      font-size: 110%;
    }
  }

  &__black {
    top: 0;
    left: 0;
    z-index: 1100;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .85);
  }

  &__box {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    padding: 40px;

    background-color: rgba(255, 255, 255, 1);
    min-width: 400px;
    z-index: 1200;

    transition: all .25s ease-in-out;

    border-radius: 2px;

    &._login {
      max-width: 400px;
      min-width: 400px;

      .trip-popup__input {
        font-size: 120%;
      }
    }
  }

  &__title {
    font-size: 160%;
    text-align: center;
    margin-bottom: 20px;

    &._sub {
      font-size: 90%;
      opacity: .5;
    }
  }

  &__form {
    display: flex;
    flex-direction: column;
    margin-bottom: 40px;
  }

  &__input {
    height: 50px;
    line-height: 50px;
    padding-left: 10px;

    margin-bottom: 20px;

    border: none;
    border-bottom: 2px solid rgba(220, 220, 220, 1);
    /*background-color: rgba(0, 0, 0, .1);*/

    transition: all .15s ease-in-out;
    border-radius: 0;

    outline: 2px solid transparent;

    &Wrap {
      position: relative;

      input {
        width: 100%;
      }
    }

    &:focus {
      background-color: rgba(0, 0, 0, .05);
      border-bottom: 2px solid $c-main;
      /*outline: 2px solid alpha($c-main, .25);*/
    }

    &._area {
      border: 2px solid rgba(220, 220, 220, 1);

      max-width: 100%;
      height: 100px;
      line-height: 25px;
      resize: none;

      &:focus {
        background-color: rgba(0, 0, 0, .05);
        border-bottom: 2px solid $c-main;
        /*outline: 2px solid alpha($c-main, .25);*/
      }
    }

  }

  transition: visibility 0s, opacity .25s ease-in-out;


}

.js-hidden {
  visibility: hidden;
  opacity: 0;

  .trip-popup__box {
    transform: translateX(-50%) translateY(-45%);
    opacity: 0;
  }
}

.ui-autocomplete {
  position: absolute;
  z-index: 1000;
  top: 50px;

  border-radius: 0;
  background-image: none;
  border: none !important;
  outline: none;

  background-color: white;

  box-shadow: 0 4px 16px -4px rgba(0, 0, 0, .25);

  .ui-menu-item {
    height: 40px;
    line-height: 40px;

    a {
      display: block;
      padding-left: 10px;

      &.ui-state-focus {
        background-image: none;
        background: $c-main;
        border: none;
        border-radius: 0;
        color: white;
        font-weight: 400;
      }
    }
  }
}

.mj-counter__graph {
  stroke: $c-main;
  stroke-weight: .25px;
  opacity: .5;
}

.mj-counter__marker {
  fill: $c-main;
}



.trip-plan {

  display: flex;
  flex-direction: column;

  margin: 0 auto;
  width: 100%;
  max-width: 1200px;

  padding: 40px;

  align-items: center;

  &__day {
      position: relative;
      margin-bottom: 40px;
  }

}

.trip-header {
  margin-bottom: 40px;

  span {
    display: none;
  }
}


.trip-stop {
  padding: 40px;
  box-shadow: 0 10px 10px -14px rgba(0, 0, 0, .25);

  &__input {
    font-size: 24px;
    border-top: none;
    border-left: none;
    border-right: none;
    margin-right: 40px;

    &._date {
      position: absolute;
      top: 0;
      right: 100%;

      max-width: 140px;
    }
  }

  &__place {
    display: flex;
  }
}



.trip-map {
  /*padding: 40px;*/
  /*background-color: rgba(0, 0, 0, .05);*/

  background-color: alpha($c-main, .25);

  padding: 40px 100px;

  margin-bottom: 40px;
  position: relative;

  display: flex;
}


.trip-direction {
  width: 500px;
  height: 320px;
  position: relative;

  flex-basis: 500px;

  box-shadow: 0 16px 16px -20px rgba(0, 0, 0, 1);

  margin-right: 40px;

  &__summary {

    display: flex;
    flex-direction: column;

    h3 {
      margin: 0;
    }

    &>* {
      font-size: 16px;
      margin-bottom: 20px;
    }

  }
}

.leaflet-routing-alternatives-container {
  display: none;
}